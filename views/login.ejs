<html>
    <head>
        <title><%= title %></title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link href="styles/main.css" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <div class="container container-small">
            <div class="row login-box">
                <div class="col-lg-12 center">
                        <img src="images/spade-logo.png" width="100px" />
                        <h2>Rush Poker</h2>
                        <img src="./images/blur-line.png" width="100%" style="margin-top:5px;" />
                </div>
            </div>
            <div class="row login-box">
                <div class="col-lg-12">
                    <form action="/login" method="POST">
                        <table class="table table-borderless">
                            <% if(messages.error) {%>
                                <tr>
                                    <td colspan="2">
                                        <div class="center" style="color: red;"><%= messages.error %></div>
                                    </td>
                                </tr>
                                
                            <% } %>
                            <tr>
                                <td>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                                        </div>
                                        <input type="text" name="email" class="form-control" placeholder="Email Address">
                                        
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div class="input-group form-group">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                                        </div>
                                        <input type="password" name="password" class="form-control" placeholder="Password">
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2"><input type="submit" class="btn btn-login" value="Login"></td>
                            </tr>
                        </table>
                        
                    </form>
                </div>
            </div>
            
        </div>
    </body>
</html>

